{
  "name": "amazon-scraper-monorepo",
  "private": true,
  "scripts": {
    "install:all": "npm-run-all install:backend install:frontend",
    "install:backend": "cd backend && bun install",
    "install:frontend": "cd frontend && npm install",
    "dev": "concurrently \"cd backend && bun run --watch index.ts\" \"cd frontend && npm run dev\""
  },
  "devDependencies": {
    "concurrently": "^9.0.0",
    "npm-run-all": "^4.1.5"
  }
}
